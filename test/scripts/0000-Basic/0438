# Check for a SIGTERM daemon kill removing the pid file
exim -d -DSERVER=server -bd -oX PORT_D -oP DIR/spool/mypidfile
****
sleep 1
sudo perl
system "ls DIR/spool | grep pid";
print "\n";
open(IN, "<", "DIR/spool/mypidfile");
while (<IN>) { kill "TERM", $_; }
