# Exim test configuration 0074

.include DIR/aux-var/std_conf_prefix


# ----- Main settings -----

qualify_domain = test.ex


# ----- Routers -----

begin routers

forwardfile:
  driver = redirect
  allow_filter
  user = CALLER
  file = DIR/aux-var/TESTNUM.filter
  reply_transport = address_reply

abcd:
  driver = redirect
  local_parts = abcd
  data = :blackhole:

localuser:
  driver = accept
  local_parts = userx : CALLER
  transport = local_delivery


# ----- Transports -----

begin transports

address_reply:
  driver = autoreply

local_delivery:
  driver = appendfile
  delivery_date_add
  envelope_to_add
  file = DIR/test-mail/$local_part
  return_path_add
  user = CALLER


# End
