# test config 4061
# Pipelining the early part of the SMTP conversation, tls-on-connect

CONTROL=*

keep_environment = PATH
exim_path = EXIM_PATH
host_lookup_order = bydns
spool_directory = DIR/spool

.ifdef SERVER
log_file_path = DIR/spool/log/SERVER%slog
.else
log_file_path = DIR/spool/log/%slog
.endif

gecos_pattern = ""
gecos_name = CALLER_NAME
dns_cname_loops = 9
chunking_advertise_hosts =
tls_on_connect_ports = PORT_D
tls_advertise_hosts = *
tls_certificate = ${if eq {SERVER}{server}{DIR/aux-fixed/cert1}fail}

# Avoid ECDHE key-exchange so that we can wireshark-decode
.ifdef _HAVE_GNUTLS
tls_require_ciphers = NORMAL:-KX-ALL:+RSA
.endif

.ifdef _HAVE_DMARC
dmarc_tld_file =
.endif

pipelining_connect_advertise_hosts = *
log_selector = +received_recipients +pipelining -tls_certificate_verified

.ifdef SERVER
queue_only
.endif

acl_smtp_rcpt = accept

#
begin routers

server:
  driver =	redirect
  condition =	${if eq {SERVER}{server}}
  data =	:blackhole:

client:
  driver =	manualroute
  route_data =	127.0.0.1
  self =	send
  transport =	smtp

#
begin transports

smtp:
  driver =		smtp
  hosts_pipe_connect =	CONTROL
  port =		PORT_D
  hosts_try_fastopen =	:
  protocol =		smtps
  tls_verify_certificates = DIR/aux-fixed/cert1
  tls_verify_cert_hostnames = :
  tls_verify_hosts =
  tls_try_verify_hosts =

