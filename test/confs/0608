# Exim test configuration 0608

.include DIR/aux-var/std_conf_prefix

primary_hostname = myhost.test.ex

# ----- Main settings -----

acl_smtp_helo = check_helo


# ----- ACLs -----

begin acl

check_helo:
  require verify = helo
  accept  logwrite = helo $sender_helo_name dnssec <$sender_helo_dnssec>

# End
