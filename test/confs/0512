# Exim test configuration 0512

HARDLIMIT=

.include DIR/aux-var/std_conf_prefix

primary_hostname = myhost.test.ex

# ----- Main settings -----


# ----- Routers -----

begin routers

r0:
  driver = redirect
  senders = :
  data = :blackhole:

r1:
  driver = accept
  transport = t1


# ----- Transports -----

begin transports

t1:
  driver = smtp
  hosts = 127.0.0.1 : 127.0.0.1 : 127.0.0.1 : 127.0.0.1
  port = PORT_S
  allow_localhost
  hosts_max_try = 1
  HARDLIMIT


# ----- Retry -----

begin retry


* * F,1s,1s

# End
