# Exim test configuration 0517

ERROR_DETAILS=

.include DIR/aux-var/std_conf_prefix

primary_hostname = myhost.test.ex

# ----- Main settings -----

acl_smtp_rcpt = a1


# ----- ACL ------

begin acl

a1:
  accept  local_parts = usery
          control = suppress_local_fixups
  accept


# ----- Routers -----

begin routers

r1:
  driver = accept
  transport = t1


# ----- Transports -----

begin transports

t1:
  driver = appendfile
  file = DIR/test-mail/$local_part
  user = CALLER

# End
