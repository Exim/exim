# Exim test configuration 0081

.include DIR/aux-var/std_conf_prefix


# ----- Main settings -----

qualify_domain = exim.test.ex
trusted_users = CALLER


# ----- Routers -----

begin routers

localuser:
  driver = accept
  local_parts = userx
  transport = local_delivery


# ----- Transports -----

begin transports

local_delivery:
  driver = appendfile
  debug_print = ">$h_X-one:<\n"
  delivery_date_add
  envelope_to_add
  file = DIR/test-mail/$local_part
  return_path_add
  user = CALLER


# End
