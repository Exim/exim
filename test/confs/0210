# Exim test configuration 0210

.include DIR/aux-var/std_conf_prefix


# ----- Main settings -----

domainlist local_domains = test.ex

qualify_domain = test.ex



# ----- Routers -----

begin routers

file:
  driver = accept
  local_parts = file
  retry_use_local_part
  transport = bsmtp_local_delivery

pipe:
  driver = accept
  local_parts = pipe
  retry_use_local_part
  transport = bsmtp_pipe_delivery

smtp:
  driver = accept
  local_parts = smtp
  retry_use_local_part
  transport = bsmtp_smtp


# ----- Transports -----

begin transports

bsmtp_local_delivery:
  driver = appendfile
  use_bsmtp
  message_prefix = "HELO x.y.z\n"
  delivery_date_add
  envelope_to_add
  file = DIR/test-mail/$local_part
  return_path_add
  user = CALLER

bsmtp_pipe_delivery:
  driver = pipe
  use_bsmtp
  command = /bin/sh -c 'cat >DIR/test-mail/pipe'
  delivery_date_add
  envelope_to_add
  return_path_add
  user = CALLER

bsmtp_smtp:
  driver = smtp
  allow_localhost
  hosts = 127.0.0.1
  port = PORT_S


# ----- Retry -----


# End
