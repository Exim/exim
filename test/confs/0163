# Exim test configuration 0163

.include DIR/aux-var/std_conf_prefix

primary_hostname = myhost.test.ex

# ----- Main settings -----

domainlist local_domains = test.ex : *.test.ex


# ----- Routers -----

begin routers

all:
  driver = manualroute
  domains = ! +local_domains
  route_list = * 127.0.0.1 byname
  self = send
  transport = smtp
  no_more

# ----- Transports -----

begin transports

smtp:
  driver = smtp
  port = PORT_S


# ----- Retry -----


begin retry

* * F,2h,15m


# End
