# Exim test configuration 0440

.include DIR/aux-var/std_conf_prefix

primary_hostname = myhost.test.ex


# ----- Main settings -----

queue_run_in_order


# ----- Routers -----

begin routers

r1:
  driver = manualroute
  transport = t1
  self = send
  route_list = * 127.0.0.1


# ----- Transports -----

begin transports

t1:
  driver = smtp
  port = PORT_S
  transport_filter = /bin/cat


# End
