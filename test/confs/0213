# Exim test configuration 0213

.include DIR/aux-var/std_conf_prefix


# ----- Main settings -----

domainlist local_domains = test.ex
qualify_domain = test.ex


# ----- Routers -----

begin routers

others:
  driver = manualroute
  domains = ! +local_domains
  route_list = * 127.0.0.1 byname
  self = send
  transport = smtp
  no_more


# ----- Transports -----

begin transports

smtp:
  driver = smtp
  port = PORT_S


# ----- Retry -----


begin retry

* * F,5d,1h


# End
