remote_smtp:
  driver = smtp
  hosts =	127.0.0.1 : HOSTIPV4
  port =	PORT_S
  hosts_try_fastopen = :
  tls_verify_certificates = DIR/aux-fixed/cert1
  tls_verify_cert_hostnames =
  allow_localhost
  command_timeout = 2s
  final_timeout = 2s

# ----- Retry -----

begin retry
* * F,30m,5m;
# End
