# Exim test configuration 0487

.include DIR/aux-var/std_conf_prefix

primary_hostname = myhost.test.ex

# ----- Main settings -----

acl_smtp_rcpt = accept
qualify_domain = QD
trusted_users = CALLER

# ----- Routers -----

begin routers

r1:
  driver = accept
  transport = t1


# ----- Transports -----

begin transports

t1:
  driver = appendfile
  file = DIR/test-mail/$local_part
  headers_rewrite = \N$^\N bogus@bogus fw
  user = CALLER


# End
