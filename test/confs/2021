# Exim test configuration 2021

REQUIRE=#
TRYCLEAR=#

.include DIR/aux-var/std_conf_prefix

primary_hostname = myhost.test.ex

# ----- Main settings -----


# ----- Routers -----

begin routers

client:
  driver = accept
  transport = send_to_server


# ----- Transports -----

begin transports

send_to_server:
  driver = smtp
  allow_localhost
  hosts = 127.0.0.1
  port = PORT_S
  REQUIRE
  TRYCLEAR


# ----- Retry -----


begin retry

* * F,5d,10s


# End
