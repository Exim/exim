# Exim test configuration 1166
SERVER=

.include aux-var/tls_conf_prefix

# ----- Main settings -----

primary_hostname = testhost.test.ex
domainlist local_domains = @ : test.ex

acl_smtp_rcpt = accept
acl_smtp_quit = drop

log_selector = +received_recipients +millisec

# ----- Routers -----

begin routers

server_dump:
  driver = redirect
  condition =	${if eq {SERVER}{server}}
  data =	* :blackhole:

to_server:
  driver = accept
  condition =	${if !eq {SERVER}{server}}
  transport =	remote_smtp
  errors_to =	""

# ----- Transports -----

begin transports

remote_smtp:
  driver = smtp
  hosts =	127.0.0.1 : HOSTIPV4
  port =	PORT_D
  hosts_try_fastopen =	:
  hosts_require_tls =	*
  tls_verify_certificates = DIR/aux-fixed/cert1
  tls_verify_cert_hostnames =
  allow_localhost

# ----- Retry -----

begin retry
* * F,30m,5m;
# End
