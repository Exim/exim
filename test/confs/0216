# Exim test configuration 0216

SERVER=

.include DIR/aux-var/std_conf_prefix

primary_hostname = myhost.test.ex


# ----- Main settings -----

acl_smtp_rcpt = accept
queue_only
queue_run_in_order


# ----- Routers -----

begin routers

client:
  driver = accept
  condition = ${if eq {SERVER}{server}{no}{yes}}
  retry_use_local_part
  transport = send_to_server


# ----- Transports -----

begin transports

send_to_server:
  driver = smtp
  allow_localhost
  hosts = 127.0.0.1
  port = PORT_D
  max_rcpt = 0


# ----- Retry -----


begin retry

* * F,5d,10s


# End
