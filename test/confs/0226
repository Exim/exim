# Exim test configuration 0226

.include DIR/aux-var/std_conf_prefix


# ----- Main settings -----

qualify_domain = test.ex
timezone = EST


# ----- Routers -----

begin routers

bounces:
  driver = accept
  caseful_local_part
  retry_use_local_part
  senders = :
  transport = local_delivery

notallowed:
  driver = redirect
  allow_defer
  caseful_local_part
  data = $local_part
  domains = no.test.ex
  forbid_file
  forbid_pipe
  retry_use_local_part

allowed:
  driver = redirect
  allow_defer
  caseful_local_part
  data = $local_part
  file_transport = address_file
  pipe_transport = address_pipe
  retry_use_local_part
  user = CALLER


# ----- Transports -----

begin transports

local_delivery:
  driver = appendfile
  file = DIR/test-mail/$local_part
  user = CALLER

address_file:
  driver = appendfile
  user = CALLER

address_pipe:
  driver = pipe
  return_output


# ----- Retry -----


begin retry

* * F,5d,1d


# End
