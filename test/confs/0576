# Exim test configuration 0576

SERVER =

.include DIR/aux-var/std_conf_prefix

log_selector = +received_recipients +sender_on_delivery

acl_smtp_rcpt = rcpt
acl_not_smtp_start = not_smtp

queue_only
queue_run_in_order

#---------------

begin acl

rcpt:
  accept
    queue = ${if eq {normal}{$local_part} {} {${bless:$local_part}}}
    logwrite = using queue '$queue_name'

not_smtp:
  accept
    queue = example

#---------------

begin routers

all:
  driver = accept
  transport = dump

#---------------

begin transports

dump:
  driver = pipe
  command = true

# End

