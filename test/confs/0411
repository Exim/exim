# Exim test configuration 0411

.include DIR/aux-var/std_conf_prefix


# ----- Main settings -----

primary_hostname = mail.test.ex
qualify_domain = test.ex


# ----- Routers -----

begin routers

r1:
  driver = redirect
  local_parts = ^t1
  allow_filter
  user = CALLER
  data = "#Exim filter\n save afolder"
  file_transport = t1

r2:
  driver = redirect
  local_parts = ^t2
  allow_filter
  user = CALLER
  data = "#Exim filter\n save bfolder"
  file_transport = t2


# ----- Transports -----

begin transports

t1:
  driver = appendfile
  file = DIR/test-mail/$address_file
  user = CALLER
  batch_max = 10

t2:
  driver = appendfile
  user = CALLER


# ----- Retry -----

begin retry

* * F,1d,1d


# End
