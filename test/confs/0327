# Exim test configuration 0327

.include DIR/aux-var/std_conf_prefix

primary_hostname = myhost.test.ex

# ----- Main settings -----

qualify_domain = test.ex


# ----- ACLs -----


# ----- Routers -----

begin routers

r1:
  driver = redirect
  data = $local_part@$domain

r2:
  driver = redirect
  data = $local_part@$domain

r3:
  driver = accept
  transport = t1
  unseen

r4:
  driver = accept
  transport = t2


# ----- Transports -----

begin transports

t1:
  driver = appendfile
  file = DIR/test-mail/$local_part
  user = CALLER

t2:
  driver = appendfile
  file = DIR/test-mail/$local_part
  user = CALLER

# End
