# Exim test configuration 0431

AFFIX=

.include DIR/aux-var/std_conf_prefix

primary_hostname = myhost.test.ex

# ----- Main settings -----

# This isn't relevant - it's just here to test that -odi
# can override it.

queue_only


# ----- Routers -----

begin routers

r1:
  driver = accept
  local_part_prefix = *-
  transport = t1

r2:
  driver = accept
  local_part_suffix = +*
  transport = t1

r3:
  driver = accept
  local_part_prefix = *.
  transport = t2


# ----- Transports -----

begin transports

t1:
  driver = smtp
  hosts = 127.0.0.1
  port = PORT_S
  allow_localhost
  AFFIX

t2:
  driver = appendfile
  file = DIR/test-mail/$local_part
  user = CALLER
  use_bsmtp
  AFFIX


# End
