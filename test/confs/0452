# Exim test configuration 0452

.include DIR/aux-var/std_conf_prefix

primary_hostname = myhost.test.ex


# ----- Main settings -----

qualify_domain = test.ex


# ----- Routers -----

begin routers

r1:
  driver = redirect
  allow_filter
  file = DIR/aux-fixed/TESTNUM.filter-$h_fno:
  reply_transport = t2
  user = CALLER

r2:
  driver = accept
  transport = t1


# ----- Transports -----

begin transports

t1:
  driver = appendfile
  file = DIR/test-mail/$local_part
  user = CALLER

t2:
  driver = autoreply


# End
