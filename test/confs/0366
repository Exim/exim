spool_directory = DIR/spool
log_file_path = DIR/spool/log/%slog
gecos_pattern = ""
gecos_name = CALLER_NAME
tls_advertise_hosts =

# ----- Main settings -----

ignore_bounce_errors_after = 0s
qualify_domain = test.ex
disable_ipv6

# ----- Routers -----

begin routers

r1:
  driver = dnslookup
  transport = smtp


# ----- Transports -----

begin transports

smtp:
  driver = smtp
  connect_timeout = 1s
  hosts_max_try = HOSTS_MAX_TRY
  port = PORT_N


# ----- Retry -----

