# Exim test configuration 3416
# Recipient callout with AUTH

.include DIR/aux-var/std_conf_prefix

primary_hostname = myhost.test.ex

# ----- Main settings -----

acl_smtp_rcpt = check_rcpt

queue_only


# ----- Authentication -----

begin authenticators

plain:
  driver = plaintext
  public_name = PLAIN
  client_send = ^userx^secret
  server_advertise_condition =	yes
  server_prompts =		:
  server_condition =		yes
  server_set_id =		$auth2


# ----- ACLs -----

begin acl

check_rcpt:
  accept  verify = recipient/callout


# ----- Routers -----

begin routers

r1:
  driver = accept
  transport = ${if eq{force}{$domain} {t2}{t1}}


# ----- Transports -----

begin transports

t1:
  driver = smtp
  hosts = 127.0.0.1
  port = PORT_S
  allow_localhost
  hosts_try_auth = *

t2:
  driver = smtp
  hosts = 127.0.0.1
  port = PORT_S
  allow_localhost
  hosts_try_auth = *
  authenticated_sender= brian

# End
