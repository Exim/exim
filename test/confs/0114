# Exim test configuration 0114

.include DIR/aux-var/std_conf_prefix


# ----- Main settings -----

qualify_domain = test.ex


# ----- Routers -----

begin routers

forward:
  driver = redirect
  allow_filter
  no_check_local_user
  file = DIR/aux-var/TESTNUM.filter
  file_transport = appendfile
  pipe_transport = pipe
  reply_transport = reply
  retry_use_local_part
  user = CALLER


# ----- Transports -----

begin transports

appendfile:
  driver = appendfile
  user = CALLER

pipe:
  driver = pipe
  user = CALLER

reply:
  driver = autoreply
  user = CALLER
  initgroups


# ----- Retry -----

begin retry

* * F,5d,1d

# End
