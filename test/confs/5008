# Exim test configuration 5008

QUOTA_FILECOUNT=0

.include DIR/aux-var/std_conf_prefix

primary_hostname = myhost.test.ex


# ----- Main settings -----

delay_warning =
qualify_domain = test.ex


# ----- Routers -----

begin routers

r1:
  driver = accept
  transport = t1

# ----- Transports -----

begin transports

t1:
  driver = appendfile
  directory = DIR/test-mail/$local_part
  user = CALLER
  maildir_format
  mailbox_size = 100K
  quota = 1M
  quota_filecount = QUOTA_FILECOUNT


# ----- Retry -----

begin retry

* * F,1d,1d


# End
