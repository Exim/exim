	  -e "/^MSGID_RE/b mi" \
	  -e "s?PERL_COMMAND?$(PERL_COMMAND)?" \
	  -e "s?EXIM_RELEASE_VERSION?$${EXIM_RELEASE_VERSION}?" \
	  -e "s?EXIM_VARIANT_VERSION?$${EXIM_VARIANT_VERSION}?" \
	  -e "p" \
	  -e "d" \
	  -e ": mi" \
	  -e "s?^?# Insert ?" \
	  -e "r ../src/utils/msgid.frag" \
	  ../src/utils/exiqsumm.src > exiqsumm-t
